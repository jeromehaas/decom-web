{% set faq = craft.entries.section('faq').one() %}

<section id='faq' class='faq section'>
			<div class='faq__inner section__inner'>
	

					{% include ("partials/heading") with { text: faq.faqHeading, class: 'faq__title' ,type: "h2" } %}

					<div class='faq__accordion-wrapper'>

					{% for item in faq.faqItems %}

						{% include ("partials/accordion") with { title: item.question, content: item.answer } %}

							{% endfor %}
								
				</div>

			</div>
		</section>