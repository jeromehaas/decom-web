{% set successForm = craft.entries.section('successForm').one() %}

<section id='success-form' class='success-form section'>
			<div class='success-form__inner section__inner'>
	
				<div class="success-form__card card" >
					{% include ("partials/heading") with { text: successForm.successFormTitle, class: "success-form__title", type: 'h2' } %}
					{% include ("partials/text") with { text: successForm.successFormText, class: "success-form__text" } %}
					{% include ("partials/button") with { text: successForm.successFormButtonText, class: "success-form__button", color: "blue", link: successForm.successFormButtonUrl } %}
				</div>

			</div>
		</section>