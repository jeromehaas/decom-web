{% set title = title is defined ? 'DECOM Switzerland AG - ' ~ title : headerInformations.headerInformationsTitle %}
{% set description = description is defined ? description : headerInformations.headerInformationsDescription %}
{% set image = image is defined ? image : 'https://decom.ch/assets/logos/decom/logo-decom-full-with-bg.png' %}
{% set url = url is defined ? url : 'https://decom.ch' %}

<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="/assets/css/global.css">
		<link rel='apple-touch-icon' sizes='180x180' href='/assets/favicons/apple-touch-icon.png'/>
		<link rel='icon' type='image/png' sizes='32x32' href='/assets/favicons/favicon-32x32.png'/>
		<link rel='icon' type='image/png' sizes='16x16' href='/assets/favicons/favicon-16x16.png'/>
		<link rel='manifest' href='/assets/favicons/site.webmanifest'/>
		<link rel='mask-icon' href='/assets/favicons/safari-pinned-tab.svg' color='#ffffff'/>
		<link rel='shortcut icon' href='/assets/favicons/favicon.ico'/>
		<title>{{ title }}</title>

		<meta name='msapplication-TileColor' content='#ffffff'/>
		<meta name='msapplication-config' content='/assets/favicons/browserconfig.xml'/>
		<meta name='theme-color' content='#ffffff'/>
		<meta name="keywords" content="DECOM, DECOM Switzerland GmbH, DECOM Crypto Asset management, Bitcoin Vermögensverwaltung, Krypto Vermögsenverwaltung, Krypto Investieren, Bitcoin, Crypto, Krypto, Bitcoin kaufen, Ethereum kaufen">
		<meta name="description" content="{{ description }}">

		<meta property="og:title" content="{{ title }}"/>
		<meta property="og:description" content=" {{ description }}"/>
		<meta property="og:image" content="{{ image }}"/>
		<meta property="og:image:width" content="1920"/>
		<meta property="og:image:height" content="1080"/>
		<meta property="og:image:alt" content="{{ description }}"/>
		<meta property="og:image:type" content="image/png"/>
		<meta property="og:type" content="image/png"/>
		<meta property="og:url" content="{{ url }}"/>
		<meta property="og:site_name" content=" {{ title }}"/>

		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="https://decom.ch">
		<meta name="twitter:title" content="{{ title }}">
		<meta name="twitter:creator" content="@decom_ch">
		<meta name="twitter:description" content="{{ description }}">
		<meta name="twitter:image" content="{{ image }}">


		<script defer data-domain="decom.ch" src="https://plausible.io/js/plausible.js"></script>
	</head>

	<body>

		<div classname='page'>

			{% include ('partials/navigation') %}

			{% block main %}{% endblock %}

			{% include 'partials/footer' %}

		</div>

		<script type="text/javascript" src="/assets/javascript/faq.js"></script>
		<script type="text/javascript" src="/assets/javascript/navigation.js"></script>
	</body>

</html>
