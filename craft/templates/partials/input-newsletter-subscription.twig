{% set placeholderText = currentSite.language == 'de' ? 'Ihre E-Mail-Adresse' : 'your email-address' %}
{% set lang = currentSite.language %}

<div class="input-newsletter-subscription {{ class}}" id="input-newsletter-subscription">
	<input class='input-newsletter-subscription__input input-newsletter-subscription__input--hidden' type='text' name="nl_lang" value='{{ lang }}' />
	<input class='input-newsletter-subscription__input' type='text' name="nl_email_address" placeholder='{{ placeholderText }}' />
	<img class='input-newsletter-subscription__icon' id="input-newsletter-subscription__icon" src='/assets/icons/various/nl-subscription-email.svg' alt='Email' />
</div>