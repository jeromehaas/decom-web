<div class="blog-card">

	<a href="blog-post/{{slug}}" class="blog-card__link">
		<img class="blog-card__image" src="{{ previewImage.one().url() }}" />
	</a>

	<div class="blog-card__content-wrapper">
		{% for category in categories %}
			{% include ("partials/category-label") with {text: category.label, color: category.value, class: "blog-card__category-label" } %}		
		{% endfor %}
		<a href="blog-post/{{slug}}" class="blog-card__link">
			{% include ("partials/heading") with { text: heading, class: "blog-card__heading", type: "h3" } %}
		</a>
		{% include ("partials/date") with { date: date, class: "blog-card__date" } %}
		{% include ("partials/text") with { text: previewText, class: "blog-card__text" } %}
	</div>

</div>